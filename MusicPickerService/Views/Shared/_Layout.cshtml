<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="/Scripts/react.js"></script>
    <script src="/Scripts/JSXTransformer.js"></script>
    <script src="/Scripts/fluxxor.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Music Picker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script src="/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="/Scripts/app.js"></script>
    <script type="text/jsx" src="/Scripts/artists.jsx">
    </script>
    <script type="text/jsx" src="/Scripts/albums.jsx">
    </script>
    <script type="text/jsx" src="/Scripts/tracks.jsx">
    </script>
    <script type="text/jsx" src="/Scripts/browser.jsx">
    </script>
    <script type="text/jsx" src="/Scripts/player.jsx">
    </script>
    <script type="text/jsx" src="/Scripts/main.jsx">
    </script>
    <script type="text/jsx">
        React.render(
        <Main flux={flux} />, $('#app')[0]);
    </script>
</body>
</html>